<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">

    @Styles.Render("~/Content/materialize")
    @Scripts.Render("~/bundles/materialize")

</head>
<body>
    @Html.Partial("_NoScript")
    <nav>
        <div class="container">
            <div class="nav-wrapper">
                @Html.ActionLink("Table2Table", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <ul class="sidenav" id="mobile-demo">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
    </ul>
        
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="page-footer center-align">
        <div class="footer-copyright">
            <div class="container">
                <p>&copy; @DateTime.Now.Year - Table2Table</p>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
