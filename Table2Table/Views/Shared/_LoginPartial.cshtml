@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="right hide-on-med-and-down">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            }
        </li>
    </ul>
}
else
{
    <ul class="right hide-on-med-and-down">
        <li>@Html.ActionLink("Aanmelden", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "waves-effect waves-light btn-small", id = "loginLink" })</li>
        <li>@Html.ActionLink("Registreren", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "waves-effect waves-light btn-small", id = "registerLink" })</li>
    </ul>
}
