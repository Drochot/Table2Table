@model IEnumerable<Table2Table.Models.Restaurant>

@{
    ViewBag.Title = "Table2Table";
}

<div class="container section" id="homeRestaurants">
    <div class="carousel carousel-slider center">
        <div class="carousel-fixed-item center">
            <a class="btn waves-effect white grey-text darken-text-2">Bekijk restaurant (get current restaurant)</a>
        </div>
        @foreach (var restaurant in Model)
        {
            <a class="carousel-item white-text" href="../Restaurant/Details/@restaurant.ID">
                <img src="https://baconmockup.com/500/500">
                <div class="carousel-item-content">
                    <h2>@restaurant.ID. @restaurant.Title</h2>
                    <p class="white-text">
                        @restaurant.Description
                    </p>
                    <p>@restaurant.IsType</p>
                </div>
            </a>
        }
    </div>

    @foreach(var restaurant in Model)
    {
        <div class="card horizontal small">
            <div class="card-image">
                <img src="https://baconmockup.com/500/500">
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <span class="card-title">@restaurant.ID. @restaurant.Title</span>
                    <p>
                        @restaurant.Description
                    </p>
                    <br />
                    @Html.ActionLink(restaurant.IsType, "../Restaurant/Type", new { type = restaurant.IsType })
                    <br />
                    @for (int i = restaurant.MichelinStars; i > 0; i--)
                    {

                        <i class="small material-icons">star</i>

                    }
                    <a href="#"></a>
                </div>
                <div class="card-action">
                    @Html.ActionLink("Bekijk restaurant", "../Restaurant/Details", new { id = restaurant.ID })
                </div>
            </div>
        </div>
    }
</div>